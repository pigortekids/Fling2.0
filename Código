#include <stdio.h>
#include <stdlib.h>

#define linhas 8
#define colunas 7
#define maxc 168

void MostrarCampo(int[linhas][colunas]);
int Fim(int[linhas][colunas]);
void Jogar(int[linhas][colunas], int[], char[]);
int Impossivel(int[linhas][colunas]);

int main()
{
    int campo[linhas][colunas], i=0, j, m, n, k, escolha, linha, coluna, acabou[1];
    char caminho[maxc];
    i=0;
    while(i==0){
        escolha=3;
        for(i=0;i<linhas;i++){
            for(j=0;j<colunas;j++){
                campo[i][j] = 0;
            }
        }
        for(i=0;i<maxc;i++){
            caminho[i] = '-';
        }
        i=0;
        k=-1;
        acabou[0] = 0;
        while(i==0){
            system("cls");
            MostrarCampo(campo);
            printf("Para iniciar o jogo\ndigite 0 ou na linha\n   ou na coluna\n\n");
            printf("linha---> ");
            scanf("%i", &linha);
            if(linha == 0){
                break;
            }
            printf("coluna--> ");
            scanf("%i", &coluna);
            if(coluna == 0){
                break;
            }
            campo[linha-1][coluna-1] = 1;
            k+=1;
        }
        Jogar(campo, acabou, caminho);
        system("cls");
        printf("\n");
        i=0;
        while(caminho[i] != '-'){
            i+=1;
        }
        i/=3;
        if(k!=i){
            printf("\tIMPOSSIVEL\n");
        }
        else{
            for(i=0;i<maxc;i++){
                if(caminho[i] == '-'){
                    break;
                }
                printf("\t%i.(%c,%c)%c\n", (i/3)+1, caminho[i], caminho[i+1], caminho[i+2]);
                i+=2;
            }
        }
        i=0;
        printf("\n");
        system("pause");
        system("cls");
        while(escolha!=1 && escolha!=0){
            printf("\n   Deseja jogar novamente?\n\t[1 para sim]\n\t[0 para nao]\n");
            scanf("%i", &escolha);
            if(escolha!=1 && escolha!=0){
                system("cls");
                printf("\n\tresposta invalida\n\n");
                system("pause");
                system("cls");
            }
        }
        if(escolha == 0){
            break;
        }
    }
}

void MostrarCampo(int campo[linhas][colunas]){
    int i, j;
    printf("\n");
    for(i=0;i<linhas;i++){
        printf("   ");
        for(j=0;j<colunas;j++){
            if(campo[i][j] == 0){
                printf("- ");
            }
            else{
                printf("O ");
            }
        }
        printf("\n");
    }
    printf("\n");
}

int Fim(int campo[linhas][colunas]){
    int c=0, i, j;
    for(i=0;i<linhas;i++){
        for(j=0;j<colunas;j++){
            if(campo[i][j] == 1){
                c+=1;
            }
        }
    }
    if(c>1){
        return 0;              //TEM MAIS DE 1 BOLA SE DER 0
    }
    else{
        return 1;              //ACABOU SE DER 1
    }
}

void Jogar(int campo[linhas][colunas], int acabou[], char caminho[]){
    int i, j, m, n, c=0, k, campo1[linhas][colunas];
    char caminho1[maxc];
    for(m=0;m<linhas;m++){
        for(n=0;n<colunas;n++){
            campo1[m][n] = campo[m][n];
        }
    }
    for(i=0;i<linhas;i++){
        for(j=0;j<colunas;j++){
            if(campo[i][j] == 1){
                if(j+1 < 8 && j+2 <8 && campo[i][j+1] == 0){
                if(acabou[0] == 0){
                    for(m=0;m<linhas;m++){
                        for(n=0;n<colunas;n++){
                            campo1[m][n] = campo[m][n];
                        }
                    }
                    for(m=0;m<maxc;m++){
                        caminho1[m] = caminho[m];
                    }
                    for(m=j+2;m<colunas;m++){
                        if(campo1[i][m] == 1){
                            campo1[i][j] = 0;
                            campo1[i][m-1] = 1;
                            k=m;
                            while(campo1[i][k+1] == 1 && k+1<7){
                                k+=1;
                            }
                            if(k==m){
                                campo1[i][k] = 0;
                            }
                            c=1;
                        }
                    }
                    //MostrarCampo(campo1);
                    //system("pause");
                    if(c==1){
                    for(m=0;m<maxc;m++){
                        if(caminho1[m] == '-'){
                            caminho1[m] = i+'1';
                            caminho1[m+1] = j+'1';
                            caminho1[m+2] = 'D';
                            break;
                        }
                    }
                    if(Fim(campo1) == 1){
                        acabou[0] = 1;
                        for(m=0;m<linhas;m++){
                            for(n=0;n<colunas;n++){
                                campo[m][n] = campo1[m][n];
                            }
                        }
                    }
                    else{
                        Jogar(campo1, acabou, caminho1);
                    }
                    }
                    c=0;
                }
                }
                if(j-1 > -1 && j-2 > -1 && campo[i][j-1] == 0){
                if(acabou[0] == 0){
                    for(m=0;m<linhas;m++){
                        for(n=0;n<colunas;n++){
                            campo1[m][n] = campo[m][n];
                        }
                    }
                    for(m=0;m<maxc;m++){
                        caminho1[m] = caminho[m];
                    }
                    for(m=j-2;m>=0;m--){
                        if(campo1[i][m] == 1){
                            campo1[i][j] = 0;
                            campo1[i][m+1] = 1;
                            k=m;
                            while(campo1[i][k-1] == 1 && k-1>=0){
                                k-=1;
                            }
                            if(k==m){
                                campo1[i][k] = 0;
                            }
                            c=1;
                        }
                    }
                    //MostrarCampo(campo1);
                    //system("pause");
                    if(c==1){
                    for(m=0;m<maxc;m++){
                        if(caminho1[m] == '-'){
                            caminho1[m] = i+'1';
                            caminho1[m+1] = j+'1';
                            caminho1[m+2] = 'E';
                            break;
                        }
                    }
                    if(Fim(campo1) == 1){
                        acabou[0] = 1;
                        for(m=0;m<linhas;m++){
                            for(n=0;n<colunas;n++){
                                campo[m][n] = campo1[m][n];
                            }
                        }
                    }
                    else{
                        Jogar(campo1, acabou, caminho1);
                    }
                    }
                    c=0;
                }
                }
                if(i+1 < 9 && i+2 < 9 && campo[i+1][j] == 0){
                if(acabou[0] == 0){
                    for(m=0;m<linhas;m++){
                        for(n=0;n<colunas;n++){
                            campo1[m][n] = campo[m][n];
                        }
                    }
                    for(m=0;m<maxc;m++){
                        caminho1[m] = caminho[m];
                    }
                    for(m=i+2;m<linhas;m++){
                        if(campo1[m][j] == 1){
                            campo1[i][j] = 0;
                            campo1[m-1][j] = 1;
                            k=m;
                            while(campo1[k+1][j] == 1 && k+1<7){
                                k+=1;
                            }
                            if(k==m){
                                campo1[k][j] = 0;
                            }
                            c=1;
                        }
                    }
                    //MostrarCampo(campo1);
                    //system("pause");
                    if(c==1){
                    for(m=0;m<maxc;m++){
                        if(caminho1[m] == '-'){
                            caminho1[m] = i+'1';
                            caminho1[m+1] = j+'1';
                            caminho1[m+2] = 'B';
                            break;
                        }
                    }
                    if(Fim(campo1) == 1){
                        acabou[0] = 1;
                        for(m=0;m<linhas;m++){
                            for(n=0;n<colunas;n++){
                                campo[m][n] = campo1[m][n];
                            }
                        }
                    }
                    else{
                        Jogar(campo1, acabou, caminho1);
                    }
                    }
                    c=0;
                }
                }
                if(i-1 > -1 &&  i-2 > -1 && campo[i-1][j] == 0){
                if(acabou[0] == 0){
                    for(m=0;m<linhas;m++){
                        for(n=0;n<colunas;n++){
                            campo1[m][n] = campo[m][n];
                        }
                    }
                    for(m=0;m<maxc;m++){
                        caminho1[m] = caminho[m];
                    }
                    for(m=i-2;m>=0;m--){
                        if(campo1[m][j] == 1){
                            campo1[i][j] = 0;
                            campo1[m+1][j] = 1;
                            k=m;
                            while(campo1[k-1][j] == 1 && k-1>=0){
                                k-=1;
                            }
                            if(k==m){
                                campo1[k][j] = 0;
                            }
                            c=1;
                        }
                    }
                    //MostrarCampo(campo1);
                    //system("pause");
                    if(c==1){
                    for(m=0;m<maxc;m++){
                        if(caminho1[m] == '-'){
                            caminho1[m] = i+'1';
                            caminho1[m+1] = j+'1';
                            caminho1[m+2] = 'C';
                            break;
                        }
                    }
                    if(Fim(campo1) == 1){
                        acabou[0] = 1;
                        for(m=0;m<linhas;m++){
                            for(n=0;n<colunas;n++){
                                campo[m][n] = campo1[m][n];
                            }
                        }
                    }
                    else{
                        Jogar(campo1, acabou, caminho1);
                    }
                    }
                    c=0;
                }
                }
            }
        }
    }
    for(m=0;m<linhas;m++){
        for(n=0;n<colunas;n++){
            campo[m][n] = campo1[m][n];
        }
    }
    for(i=0;i<maxc;i++){
        caminho[i] = caminho1[i];
    }
}
